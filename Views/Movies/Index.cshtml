
@model MvcMovie.Models.MovieGenreViewModel

@{
    ViewData["Title"] = "Movie List -";
}
<div class="background" style=" background: #c5d5c5; padding: 4rem; border-radius: 15px;">
    <h1>LDS Movie List</h1>

    <p>
        <a asp-action="Create" style="        text-decoration: underline; font-weight: bold; color: black; ">Add Movie</a>
    </p>
    <form asp-controller="Movies" asp-action="Index" method="get">
        <p>

            <select asp-for="MovieGenre" asp-items="Model.Genres">
                <option value="">All</option>
            </select>

            Title: <input type="text" asp-for="SearchString" />
            <input type="submit" value="Filter" />
        </p>
    </form>

    <table class="table">
        <thead style="        background: #9fa9a3;  ">
            <tr style="color: #f0f0f0;">
                <th>
                    @Html.DisplayNameFor(model => model.Movies[0].Title)
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]" style=" text-decoration: underline; color: #f0f0f0;">@Html.DisplayNameFor(model => model.Movies[0].ReleaseDate)</a>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Movies[0].Genre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Movies[0].Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Movies[0].Rating)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody style="background: #f0f0f0;">
            @foreach (var item in Model.Movies)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReleaseDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rating)
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" style="color: black;">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" style="color: black;">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" style="color: black;">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>